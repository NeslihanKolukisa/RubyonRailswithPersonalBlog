<tr>
    <td> <%= link_to post.baslik, authors_post_path(post) %> </td>
    <% if post.yayinlanma? %>
        <td> <%= link_to 'Yayinda değil', unpublish_authors_post_path(post), method: :put, class: 'btn btn-sm btn-primary' %> </td>
    <% else %>
        <td> <%= link_to 'Yayında', publish_authors_post_path(post), method: :put, class: 'btn btn-sm btn-success' %> </td>
    <% end %>
    
     <td> <%= link_to 'Düzenle', edit_authors_post_path(post), class: 'btn btn-sm btn-warning' %> </td>
      <td> <%= link_to 'Sil', authors_post_path(post), method: :delete, data:{confirm: 'Silmek istediğinize emin misiniz?'}, class: 'btn btn-sm btn-danger' %> </td>
</tr>