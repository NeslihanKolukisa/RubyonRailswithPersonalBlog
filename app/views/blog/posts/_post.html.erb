    
<!-- post -->
					<div class="col-md-4">
						<div class="post">
						    <%= link_to  post, class: 'post-img' do  %>
						    	<%= image_tag post.resim.url(:thumb) if post.resim? %>
						    <% end %>
						
							<div class="post-body">
								<div class="post-meta">
									<%=link_to post.baslik, post   %>
									<p><%= raw post.tags.map{ |t| link_to t.name, posts_path(tag: t.name), class:"post-category cat-1" }.join(', ') %></p>
									<span class="post-date"><%= post.display_day_published %></span>
								</div>
								<%= link_to post do %>
								    <h3 class="post-title"><%= truncate(post.aciklama, length:100) %></h3>
								<% end %>
							</div>
						</div>
					</div>
					<!-- /post -->