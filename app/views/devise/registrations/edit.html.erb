<div class="container">
<p></p>
<h2>Profili düzenle</h2>
<div class="signup-content">
                    <div class="signup-form">
                       <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                            <div class="form-group">
                                <label style="position:absolute" for="name"><i class="fa fa-user"></i></label>
                                <%= f.email_field :email, autofocus: true,  autocomplete: "email" %>
                            </div>
                            
                              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                              <% end %>
  
                            <div class="form-group">
                                <i>(değiştirmek istemiyorsanız boş bırakın)</i>
                                <label for="pass"><i class="fa fa-key"></i></label>
                                 <%= f.password_field :password,placeholder:"Yeni şifre",  autocomplete: "new-password" %>
                                   <% if @minimum_password_length %>
                                      <br />
                                      <em><%= @minimum_password_length %> karakter minimum</em>
                                    <% end %>
                            </div>
                            <div class="form-group">
                               <label style="position:absolute" for="name"><i class="fa fa-key"></i></label>
                                <%= f.password_field :password_confirmation,placeholder:"Yeni şifreyi tekrar girin", autocomplete: "new-password" %>
                              </div>
                              <div class="form-group">
                                <i>(değişikliklerinizi onaylamak için mevcut şifrenize ihtiyacımız var)</i><br>
                                <label style="position:absolute" for="name"><i class="fa fa-key"></i></label>
                                <%= f.password_field :current_password,placeholder:"Eski şifre",   autocomplete: "current-password" %>
                              </div>
                            
                            <div class="form-group form-button">
                                 <%= f.submit "Güncelle", class:"form-submit" %>
                            </div>
                      <% end %>
                    </div>
                    
                    <div class="signup-image">
                        <figure><img src="../assets/signup-image.jpg" alt="sing up image"></figure>
                    </div>
                </div>





</div>
