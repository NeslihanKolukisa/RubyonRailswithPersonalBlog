<div class="container">
<p></p>
<h2>Üye Ol</h2>
<div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Üye Ol</h2>
                       <%= form_for(resource, as: resource_name,url: registration_path(resource_name)) do |f| %>
                       <%= render "devise/shared/error_messages", resource: resource %>
                            <div class="form-group">
                                <label for="email"><i class="fa fa-user"></i></label>
                                    <%= f.email_field :email, autofocus: true, placeholder:"Email adresiniz" , autocomplete: "email" %>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="fa fa-key"></i></label>
                                 <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> karakter en az)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "new-password",placeholder:"Şifre" %>
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="fa fa-key"></i></label>
                             <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Şifreyi doğrula" %>
                            </div>
                            <div class="form-group form-button">
                                  <%= f.submit "Üye ol", class:"form-submit" %>
                            </div>
                       <% end %>
                    </div>
                    <div class="signup-image">
                        <figure><img src="../assets/signup-image.jpg" alt="sing up image"></figure>
                        <span class="signup-image-link">Zaten üye misiniz?</span>
                        <%= render "devise/shared/links" %>
                    </div>
                </div>

</div>
