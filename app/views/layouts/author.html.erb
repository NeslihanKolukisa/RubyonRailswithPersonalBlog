<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | Neslihanın Blogu </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cloud.tinymce.com/5/tinymce.min.js"></script>
  </head>

  <body>
      
  	<%= render 'layouts/navbar' %>
    <!-- section -->
		<div class="section">
		    <% if flash.any? %>
                <% flash.keys.each do |key| %>
                <div class="alert alert-<%= key.to_s %> alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <shttps://cdn.jsdelivr.net/emojione/assets/3.1/png/128/1f4c4.pngpan aria-hidden="true">&times;</span>
                    </button>
                  <%= flash[key] %>
                </div>
                <% end %>
            <% end %>
        <%= yield %>
    </div>
   <footer id="footer">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-5">
						<div class="footer-widget">
							<div class="footer-logo">
								<a href="index.html" class="logo"><img src="../assets/logo.png" alt=""></a>
							</div>
							<ul class="footer-nav">
								<li><a href="#">Neslihan Kolukısa</a></li>
								<li><a href="#">Kişisel Web Sayfası</a></li>
							</ul>
							<div class="footer-copyright">
								<span>&copy; <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
Copyright &copy;<script>document.write(new Date().getFullYear());</script> 
							</div>
						</div>
					</div>

					<div class="col-md-4">
						<div class="row">
							<div class="col-md-6">
								<div class="footer-widget">
									<h3 class="footer-title">Hakkımda</h3>
									<ul class="footer-links">
										<li><%= link_to 'Hakkımda', hakkimda_path, class: "#{yield(:hakkimda_active)}" %></li>
										<li><%= link_to 'İletişim', iletisim_path, class: "#{yield(:iletisim_active)}" %></li>
									</ul>
								</div>
							</div>
							
						</div>
					</div>

					<div class="col-md-3">
						<div class="footer-widget">
							<h3 class="footer-title">Beni takip edin</h3>

							<ul class="footer-social">
								<li><a target="_blank" href="https://www.facebook.com/profile.php?id=100001206050650"><i class="fa fa-facebook"></i></a></li>
								<li><a target="_blank" href="https://twitter.com/neslihan_sftwre"><i class="fa fa-twitter"></i></a></li>
								<li><a target="_blank" href="https://aboutme.google.com/u/0/?referer=gplus"><i class="fa fa-google-plus"></i></a></li>
								<li><a target="_blank" href="http://www.linkedin.com/in/neslihankolukisa"><i class="fa fa-linkedin"></i></a></li>
							</ul>
						</div>
					</div>

				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</footer>
  </body>
</html>
